# Worker Configuration Template
# Copy this to worker_config.env and fill in your values

# Backend URL (required)
BACKEND_URL=http://localhost:8000

# Worker ID (optional - will use hostname if not set)
WORKER_ID=

# Resource Limits
CPU_LIMIT=2
MEMORY_LIMIT=2g
DISK_LIMIT=1g

# Docker Settings
DOCKER_TIMEOUT=300
CLEANUP_CONTAINERS=true
